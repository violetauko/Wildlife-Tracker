{{#partial "content"}}

    <div class="container-fluid">
        <div class="sighting-form">
            <h1 class="mb-5">Enter Details</h1>
            <form class="form" action="/sighting/new" method="post">
                <div class="mb-3 ">
                    <h6>Animal_id:</h6>
                    <input type="number" id="animal_id" placeholder="Enter animal's id" name="animal_id" required>
                </div>
                <div class="mb-3 ">
                    <h6>Location:</h6>
                    <input type="text" id="location" placeholder="Enter animal's location" name="location" required>
                </div>
                <div class="mb-3 ">
                    <h6>Ranger Name:</h6>
                    <input type="text" id="name" placeholder="Enter ranger's name" name="rangerName" required>
                </div>
                <input class="btn" type="submit">
            </form>
        </div>
    </div>


{{/partial}}
{{> layout.hbs}}